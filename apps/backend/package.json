{
  "name": "@noteminds/backend",
  "version": "1.0.50",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.26",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "1.4.1",
    "@elysiajs/node": "^1.4.1",
    "@elysiajs/openapi": "^1.4.11",
    "@mozilla/readability": "^0.6.0",
    "@t3-oss/env-core": "^0.13.8",
    "@types/jsdom": "^27.0.0",
    "@types/turndown": "^5.0.6",
    "ai": "^5.0.86",
    "better-auth": "^1.3.34",
    "better-sqlite3": "^12.4.1",
    "cheerio": "^1.1.2",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.44.7",
    "elysia": "latest",
    "jsdom": "^27.1.0",
    "readability": "^0.1.0",
    "turndown": "^7.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@noteminds/eslint-config": "workspace:*",
    "@noteminds/prettier-config": "workspace:*",
    "@noteminds/typescript-config": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.20.6"
  },
  "module": "src/index.js",
  "exports": {
    ".": "./src/index.ts",
    "./db": "./src/db/index.ts",
    "./db/schema": "./src/db/app-schema.ts",
    "./lib/ai": "./src/lib/ai.ts",
    "./lib/auth": "./src/lib/auth.ts",
    "./lib/env": "./src/lib/env.ts",
    "./lib/schemas": "./src/lib/schemas.ts"
  }
}
